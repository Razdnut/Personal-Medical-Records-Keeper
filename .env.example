# Medical Records Management System - Environment Configuration
# Copy this file to .env and customize the values as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=True
APP_NAME="Medical Records Management System"
VERSION="0.0.8"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./medical_records.db
# For PostgreSQL: postgresql://user:password@localhost/medical_records
# For MySQL: mysql://user:password@localhost/medical_records

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_change_this_in_production
ALGORITHM=HS256

# =============================================================================
# DEVELOPMENT SECURITY TOGGLES
# Set DISABLE_SECURITY_IN_DEV=False to enable full security in development
# =============================================================================
DISABLE_SECURITY_IN_DEV=True

# Token and Authentication Settings
ACCESS_TOKEN_EXPIRE_MINUTES=480
ENABLE_FAILED_LOGIN_TRACKING=False

# Security Feature Toggles
ENABLE_RATE_LIMITING=False
ENABLE_SUSPICIOUS_INPUT_DETECTION=False
ENABLE_SECURITY_AUDIT_LOGGING=False
ENABLE_REQUEST_MONITORING=False
ENABLE_SESSION_TIMEOUT=False
ENABLE_PASSWORD_COMPLEXITY=False
ENABLE_FILE_TYPE_VALIDATION=False
ENABLE_MEDICAL_AUDIT_LOGGING=False

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_RETENTION_DAYS=180
ENABLE_DEBUG_LOGS=True

# =============================================================================
# PRODUCTION OVERRIDES
# Uncomment and modify these for production deployment
# =============================================================================
# DEBUG=False
# DISABLE_SECURITY_IN_DEV=False
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# ENABLE_RATE_LIMITING=True
# ENABLE_FAILED_LOGIN_TRACKING=True
# ENABLE_SECURITY_AUDIT_LOGGING=True
# ENABLE_MEDICAL_AUDIT_LOGGING=True
# CORS_ALLOW_ALL_ORIGINS=False
# SECRET_KEY=your_actual_production_secret_key_here
